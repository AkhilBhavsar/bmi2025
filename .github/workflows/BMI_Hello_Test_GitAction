name: BMI_Hello

on:
  push:
    branches: [ master ]
  pull_request:
    branches: [ master ]
  workflow_dispatch:   #  allows manual run from GitHub UI

jobs:
  hello:
    # Run the job on all three OS types
    runs-on: ${{ matrix.os }}
    strategy:
      matrix:
        os: [ubuntu-latest, windows-latest, macos-latest]

    steps:
      # Step 1: Checkout repository
      - uses: actions/checkout@v3

      # Step 2: Print OS name
      - name: Print Operating System
        run: |
          echo "Running on ${{ matrix.os }}"

      # Step 3: Run a test command
      - name: Run Hello Script
        run: |
          echo "Hello, world BMI! from ${{ matrix.os }}"

      # Step 4: Show system details
      - name: System Info
        run: |
          uname -a || ver
